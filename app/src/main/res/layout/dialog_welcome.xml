<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="0dp"
    android:layout_margin="5dp"
    android:background="@drawable/dialog_background">

<!-- Dialog Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to WhatsAlert"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Secondary_Color"
        android:gravity="center" />

    <!-- Underline below Title -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Primary_Color"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Dialog Message -->
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WhatsAlert helps you store messages and set reminders. At the reminder time, you'll get a notification. When you tap the notification, you'll be redirected to the WhatsApp chat of the contact, with the message pre-filled. Just hit send!"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <!-- Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-12dp"
        android:layout_marginTop="12dp">

        <!-- App Version -->
        <TextView
            android:id="@+id/dialog_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Button -->
        <Button
            android:id="@+id/dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Got it!"
            android:backgroundTint="@color/white"
            android:textColor="@color/Primary_Color" />
    </LinearLayout>
</LinearLayout>
